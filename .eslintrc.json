{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".svg"]
            },
            "typescript": {
                "alwaysTryTypes": true,
                "project": [
                    "./src/main/tsconfig.json",
                    "./src/renderer/tsconfig.json",
                    "./tsconfig.json"
                ]
            }
        },
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        }
    },
    "rules": {
        "linebreak-style": "off",
        "no-restricted-globals": "off",
        "no-use-before-define": "off",
        "dot-notation": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "no-underscore-dangle": "off",
        "brace-style": ["warn", "stroustrup"],
        "radix": ["error", "as-needed"],
        "quote-props": ["error", "consistent-as-needed"],
        "import/extensions": "off",
        "import/prefer-default-export": "off",
        "no-dupe-class-members": "off",
        "no-unused-vars": "off",
        "no-redeclare": "off",
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "import/no-unresolved": ["error", {
            "ignore": [".svg"]
        }],
        "import/no-extraneous-dependencies": ["error", {
            // This will prevent error for "electron" imports
            // as a dev-dependency
            "devDependencies": true
        }],
        "lines-between-class-members": ["error", "always", {
            "exceptAfterSingleLine": true
        }],
        "prefer-destructuring": ["warn", {
            "object": true,
            "array": false
        }],
        "indent": ["error", 2, {
            "ignoredNodes": ["TemplateLiteral > *"],
            "SwitchCase": 1
        }],

        // Typescript eslint linting rules

        "@typescript-eslint/no-dupe-class-members": "error",
        "@typescript-eslint/no-redeclare": "error",
        "@typescript-eslint/no-unused-vars": ["warn", {
            "argsIgnorePattern": "^_"
        }],

        // React specific linting rules

        "react/jsx-filename-extension": "off",
        "react/jsx-one-expression-per-line": "off",
        "react/require-default-props": "off"
    },
    "overrides": [
        // Override "no-undef" for typescript files as this check
        // is done by TS compiler natively. This prevents caveats
        // associated with "no-undef" rule for TS files
        {
            "files": ["**/*.ts"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
