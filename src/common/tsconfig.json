{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out/common",
    "noEmit": false,
    "module": "CommonJS",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "../../out/tscache/common.tsbuildinfo",
    "paths": {
      "common/*": ["./src/common/*"]
    },
    "typeRoots": [
      "types"
    ],
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": ["./"],
  "exclude": ["../renderer/**/*", "../main/**/*"]
}
