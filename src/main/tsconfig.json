{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out/",
    "noEmit": false,
    "module": "CommonJS",
    "rootDir": "./",
    "paths": {
      "main/*": ["./src/main/*"]
    },
    "typeRoots": [
      "types"
    ],
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": ["./"],
  "exclude": ["../renderer/**/*"]
}
