{
    "name": "g-assist",
    "productName": "Google Assistant",
    "description": "A cross-platform unofficial desktop client for Google Assistant powered by the Google Assistant SDK",
    "version": "2.0.0-beta",
    "private": true,
    "author": "Melvin Abraham <melvinredvirus@gmail.com>",
    "homepage": "https://github.com/Melvin-Abraham/Google-Assistant-Unofficial-Desktop-Client",
    "repository": {
        "url": "https://github.com/Melvin-Abraham/Google-Assistant-Unofficial-Desktop-Client"
    },
    "bugs": {
        "url": "https://github.com/Melvin-Abraham/Google-Assistant-Unofficial-Desktop-Client/issues"
    },
    "license": "Apache-2.0",
    "keywords": [
        "google-assistant",
        "google-assistant-sdk",
        "electron-app",
        "virtual-assistant",
        "desktop-app",
        "electron",
        "assistant",
        "cross-platform"
    ],
    "main": "./out/main/app.js",
    "scripts": {
        "start": "electron .",
        "dev": "yarn compile:common && yarn watch",
        "build": "rimraf ./out/ && yarn compile:common && yarn compile:renderer && yarn compile:main && yarn clean:tscache",
        "dist": "yarn build && electron-builder",
        "dist:ci": "yarn dist --publish never",
        "clean": "rimraf ./dist/ && rimraf ./out/",
        "clean:tscache": "rimraf ./out/tscache/",
        "serve": "vite preview --port=3000",
        "compile:common": "ttsc --build ./src/common/tsconfig.json",
        "compile:main": "ttsc --build ./src/main/tsconfig.json",
        "compile:renderer": "yarn tscheck:renderer && vite build",
        "watch": "concurrently -n common,renderer,main \"yarn watch:common\" \"yarn watch:renderer\" \"yarn watch:main\"",
        "watch:common": "yarn compile:common --watch --preserveWatchOutput",
        "watch:main": "yarn compile:main --watch --preserveWatchOutput",
        "watch:renderer": "vite",
        "lint": "eslint --ext \".ts, .tsx, .js\" .",
        "tscheck:common": "tsc -p ./src/common/tsconfig.json --noEmit",
        "tscheck:main": "tsc -p ./src/main/tsconfig.tscheck.json --noEmit",
        "tscheck:renderer": "tsc -p ./src/renderer/tsconfig.tscheck.json --noEmit",
        "test": "yarn tscheck:common && yarn tscheck:main && yarn tscheck:renderer",
        "preinstall": "yarn add https://github.com/Melvin-Abraham/google-assistant.git --ignore-scripts",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "bumblebee-hotword": "0.2.1",
        "electron-is-accelerator": "^0.2.0",
        "electron-log": "^4.4.8",
        "electron-updater": "^5.3.0",
        "google-assistant": "https://github.com/Melvin-Abraham/google-assistant.git",
        "isomorphic-dompurify": "^1.1.0",
        "lottie-react": "^2.4.0",
        "marked": "^4.2.12",
        "node-fetch": "^3.3.0",
        "react": "17.0.0",
        "react-dom": "17.0.0",
        "vite-plugin-svgr": "^2.4.0"
    },
    "devDependencies": {
        "@types/eslint": "^8.21.1",
        "@types/node": "^18.14.6",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/vite-plugin-react-svg": "^0.2.2",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "@vitejs/plugin-react": "^3.1.0",
        "concurrently": "^7.6.0",
        "electron": "23.1.3",
        "electron-builder": "23.6.0",
        "eslint": "^8.35.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "prettier": "^2.8.4",
        "rimraf": "^4.3.1",
        "sass": "^1.58.3",
        "ttypescript": "^1.5.15",
        "typescript": "4.9.5",
        "typescript-transform-paths": "^3.4.6",
        "vite": "^4.1.4",
        "vite-plugin-checker": "^0.5.6"
    },
    "resolutions": {
        "@types/node": "18.14.6"
    },
    "browserslist": [
        "chrome >= 108"
    ]
}
