{
    "name": "g-assist",
    "productName": "Google Assistant",
    "description": "A cross-platform unofficial desktop client for Google Assistant powered by the Google Assistant SDK",
    "version": "2.0.0-beta",
    "private": true,
    "author": "Melvin Abraham <melvinredvirus@gmail.com>",
    "homepage": "https://github.com/Melvin-Abraham/Google-Assistant-Unofficial-Desktop-Client",
    "repository": {
        "url": "https://github.com/Melvin-Abraham/Google-Assistant-Unofficial-Desktop-Client"
    },
    "bugs": {
        "url": "https://github.com/Melvin-Abraham/Google-Assistant-Unofficial-Desktop-Client/issues"
    },
    "license": "Apache-2.0",
    "keywords": [
        "google-assistant",
        "google-assistant-sdk",
        "electron-app",
        "virtual-assistant",
        "desktop-app",
        "electron",
        "assistant",
        "cross-platform"
    ],
    "main": "./out/main/app.js",
    "build": {
        "appId": "com.redvirus.g-assist",
        "files": [
            "src/main/res/**/*",
            "out/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "app/res/misc/*"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "Melvin-Abraham",
                "repo": "Google-Assistant-Unofficial-Desktop-Client"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "icon": "./app/res/icons/favicon.ico"
        },
        "nsis": {
            "oneClick": "false",
            "artifactName": "${productName}-Setup-${version}.${ext}",
            "allowToChangeInstallationDirectory": "true",
            "installerIcon": "./app/res/icons/Installer.ico",
            "installerSidebar": "./app/res/misc/InstallerSidebar.bmp",
            "uninstallerSidebar": "./app/res/misc/UninstallerSidebar.bmp",
            "license": "LICENSE"
        },
        "mac": {
            "icon": "./app/res/icons/icon.icns",
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ],
            "darkModeSupport": true
        },
        "dmg": {
            "background": "./app/res/misc/DMG Background.png",
            "icon": "./app/res/icons/icon.icns",
            "iconSize": 100,
            "contents": [
                {
                    "x": 350,
                    "y": 280,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 80,
                    "y": 280,
                    "type": "file"
                }
            ],
            "window": {
                "width": 600,
                "height": 410
            }
        },
        "linux": {
            "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
            "category": "Productivity",
            "target": [
                "AppImage",
                "snap",
                "deb",
                "rpm"
            ],
            "icon": "./app/res/icons/icon.icns"
        },
        "snap": {
            "confinement": "strict",
            "grade": "stable",
            "plugs": [
                "default",
                "audio-record"
            ]
        }
    },
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"yarn watch:common\" \"yarn watch:renderer\" \"yarn watch:main\"",
        "build": "rimraf ./out/ && yarn compile:common && yarn compile:renderer && yarn compile:main && yarn clean:tscache",
        "dist": "yarn build && electron-builder",
        "dist:ci": "yarn dist --publish never",
        "clean": "rimraf ./dist/ && rimraf ./out/",
        "clean:tscache": "rimraf ./out/tscache/",
        "serve": "vite preview --port=3000",
        "compile:common": "ttsc --build ./src/common/tsconfig.json",
        "compile:main": "ttsc --build ./src/main/tsconfig.json",
        "compile:renderer": "yarn tscheck:renderer && vite build",
        "watch:common": "yarn compile:common --watch --preserveWatchOutput",
        "watch:main": "yarn compile:main --watch --preserveWatchOutput",
        "watch:renderer": "vite",
        "lint": "eslint --ext \".ts, .tsx, .js\" .",
        "tscheck:common": "tsc -p ./src/common/tsconfig.json --noEmit",
        "tscheck:main": "tsc -p ./src/main/tsconfig.tscheck.json --noEmit",
        "tscheck:renderer": "tsc -p ./src/renderer/tsconfig.tscheck.json --noEmit",
        "test": "yarn tscheck:common && yarn tscheck:main && yarn tscheck:renderer",
        "preinstall": "yarn add git://github.com/Melvin-Abraham/google-assistant.git#g-assist --ignore-scripts",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "bumblebee-hotword": "0.2.1",
        "electron-is-accelerator": "^0.2.0",
        "electron-log": "^4.3.5",
        "electron-updater": "^4.3.9",
        "google-assistant": "git://github.com/Melvin-Abraham/google-assistant.git#g-assist",
        "grpc": "1.24.6",
        "isomorphic-dompurify": "^0.15.0",
        "marked": "^3.0.2",
        "node-fetch": "^2.6.1",
        "react": "^17.0.0",
        "react-dom": "^17.0.0"
    },
    "devDependencies": {
        "@types/eslint": "^7.28.2",
        "@types/node": "^16.11.7",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/vite-plugin-react-svg": "^0.2.0",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "@vitejs/plugin-react": "^1.0.0",
        "concurrently": "^6.3.0",
        "electron": "10.3.2",
        "electron-builder": "22.10.5",
        "eslint": "^8.2.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.26.1",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "sass": "^1.43.4",
        "ttypescript": "^1.5.13",
        "typescript": "^4.4.4",
        "typescript-transform-paths": "^3.3.1",
        "vite": "^2.6.13",
        "vite-plugin-checker": "^0.3.4",
        "vite-plugin-react-svg": "^0.2.0"
    },
    "browserslist": [
        "chrome >= 85"
    ]
}
